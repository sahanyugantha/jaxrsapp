<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">

  <Properties>
    <Property name="basepath">logs</Property>
  </Properties>

  <Appenders>
  
    <Console name="Console" target="SYSTEM_OUT">
      <PatternLayout pattern="%d {.SSS} [%t] %-5level %logger{36} - %msg%n"/>
    </Console>
    
    <File name="JustFile" fileName="${basepath}/test.log ">
      <PatternLayout>
        <pattern>%d %p %C{1.} [%t] %m%n</pattern>
      </PatternLayout>
    </File>
    
  	<RollingFile name="RollingFile" fileName="${basepath}/roll-test.log"
                filePattern="${basepath}/roll-test-%d{yyyy-MM-dd HH:mm:ss}.log.gz">
     <PatternLayout>
       <pattern>%d %p %c{1.} [%t] %m%n</pattern>
     </PatternLayout>
     <SizeBasedTriggeringPolicy size="1KB" />
   </RollingFile>
    
  </Appenders>
  
  <Loggers>
  
    <Root level="trace">
      <AppenderRef ref="Console"/>
       <AppenderRef ref="JustFile"/>
       <AppenderRef ref="JustFile"/>
       <AppenderRef ref="RollingFile"/>
    </Root>
    
  </Loggers>
</Configuration>